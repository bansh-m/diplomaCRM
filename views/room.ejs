<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>
    <body>
        <div class="d-flex">
            <%- include('layouts/sidebar'); -%>
            <main class="flex-grow-1">
                <div class="container mt-4">
                    <div class="room-body">
                        <h1 class="room-title">
                            <%= room.name %>
                        </h1>
                        <p class="room-text"><strong>Address:</strong>
                            <%= room.address %>
                        </p>
                        <p class="room-text"><strong>Duration:</strong>
                            <%= room.sessionDuration %> minutes
                        </p>
                        <p class="room-text"><strong>Player Limits:</strong>
                            <%= room.playerLimits.min %> - <%= room.playerLimits.max %> players
                        </p>
                        <h6 class="mt-3">Actors in this room:</h6>
                        <ul>
                            <% if (room.actors && room.actors.length > 0) { %>
                                <% room.actors.forEach(function(actor) { %>
                                    <li><%= actor.name %></li>
                                <% }); %>
                            <% } else { %>
                                <li>No actors assigned</li>
                            <% } %>
                        </ul>
                    </div>
                </div>
                <div class="container mt-4">
                    <div id='calendar'></div>
                </div>
            </main>
            <script src="/js/calendar.js"></script>
            <%- include('layouts/scripts'); -%>
    </body>
</html>