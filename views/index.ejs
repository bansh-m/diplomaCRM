<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>

    <body>
        <div class="d-flex">
            <div class="main-content p-3">
                <h1>Rooms Management</h1>
                <div class="d-flex flex-wrap justify-content-start mt-4">
                    <% rooms.forEach(function(room) { %>
                        <div class="p-2">
                            <div class="card">
                                <img src="<%= room.thumbnail %>" class="card-img-top" alt="<%= room.name %>">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= room.name %>
                                    </h5>
                                    <p class="card-text">Some details about the room...</p>
                                    <a href="#" class="btn btn-primary">Go somewhere</a>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                        <div class="p-2">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#roomModal">
                                Add New Room
                            </button>
                        </div>
                </div>
            </div>

            <!-- The Modal -->
            <div class="modal fade" id="roomModal" tabindex="-1" role="dialog" aria-labelledby="roomModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h5 class="modal-title" id="roomModalLabel">Add New Room</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <!-- Modal Body -->
                        <div class="modal-body">
                            <form action="/rooms/create" method="post" id="addRoomForm" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="roomName">Room Name:</label>
                                    <input type="text" class="form-control" id="roomName" name="name" required>
                                </div>
                                <div class="form-group">
                                    <label for="roomAddress">Address:</label>
                                    <input type="text" class="form-control" id="roomAddress" name="address" required>
                                </div>
                                <div class="form-group">
                                    <label for="hasActors">Has Actors:</label>
                                    <select class="form-control" id="hasActors" name="hasActors">
                                        <option value="true">Yes</option>
                                        <option value="false" selected>No</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="roomDuration">Duration (minutes):</label>
                                    <input type="number" class="form-control" id="roomDuration" name="duration"
                                        required>
                                </div>
                                <div class="form-group">
                                    <label>Player Limits:</label>
                                    <div class="d-flex">
                                        <input type="number" class="form-control mr-2" id="minPlayers" name="minPlayers"
                                            placeholder="Min" required>
                                        <input type="number" class="form-control" id="maxPlayers" name="maxPlayers"
                                            placeholder="Max" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="roomThumbnail">Room Thumbnail:</label>
                                    <input type="file" class="form-control" id="roomThumbnail" name="thumbnail" accept="image/*">
                                </div>

                                <!-- Modal Footer -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary" onclick="return validateForm()">Add Room</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <script src="/js/formValidator.js"></script>
            <%- include('layouts/scripts'); -%>
    </body>

</html>