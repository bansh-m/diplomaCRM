<div class="modal fade" id="roomModal" tabindex="-1" aria-labelledby="roomModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title" id="roomModalLabel">Add New Room</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <!-- Modal Body -->
            <div class="modal-body">
                <form action="/rooms/create" method="post" id="addRoomForm">
                    <div class="form-group">
                        <label for="roomName">Room Name:</label>
                        <input type="text" class="form-control" id="roomName" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="roomAddress">Address:</label>
                        <input type="text" class="form-control" id="roomAddress" name="address" required>
                    </div>
                    <div class="form-group">
                        <label for="roomDuration">Duration (minutes):</label>
                        <input type="number" class="form-control" id="roomDuration" name="duration" required>
                    </div>
                    <div class="form-group">
                        <label for="actors">Select Actors:</label>
                        <select multiple class="form-control" id="actors" name="actors">
                            <% actors.forEach(function(actor) { %>
                                <option value="<%= actor._id %>"><%= actor.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Player Limits:</label>
                        <div class="d-flex">
                            <input type="number" class="form-control mr-2" id="minPlayers" name="minPlayers" placeholder="Min" required>
                            <input type="number" class="form-control" id="maxPlayers" name="maxPlayers" placeholder="Max" required>
                        </div>
                    </div>
                    <!-- <div class="form-group">
                        <label for="roomThumbnail">Room Thumbnail:</label>
                        <input type="file" class="form-control" id="roomThumbnail" name="thumbnail" accept="image/*">
                    </div> -->
                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" onclick="return validateForm()">Add Room</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>